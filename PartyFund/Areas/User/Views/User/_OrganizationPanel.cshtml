<div class="row">
    <div class="col-lg-12">
        <div class="hpanel">
            <div class="panel-heading">
                <div class="panel-tools">
                    <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                    <a class="closebox"><i class="fa fa-times"></i></a>
                </div>
                Dashboard information and statistics
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-3 text-center">
                        <div class="">
                            <i class="fa fa-building-o"></i> Organization Name
                        </div>
                        <div>
                            <h1 class="font-extra-bold m-t-xl m-b-xs">
                                abc point
                            </h1>
                        </div>
                        <div class="small m-t-xl">
                            <i class="fa fa-clock-o"></i> Data from January
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="text-center small">
                            <i class="fa fa-laptop"></i> Active users in current month (December)
                        </div>
                        <div class="flot-chart" style="height: 160px">
                            <div class="flot-chart-content" id="flot-line-chart"></div>
                        </div>
                    </div>
                    <div class="col-md-3 text-center">
                        <div class="">
                            <i class="fa fa-clock-o"></i> Current Amount
                        </div>
                        <div>
                            <h1 class="font-extra-bold m-t-xl m-b-xs">
                                10000
                            </h1>
                            @*<small>And four weeks</small>*@
                        </div>
                        <div class="tooltip-demo text-center m-t-xl">
                            @{
                                if (ViewBag.test == "test")
                                {
                                    //for getting UserDetailsID
                                    var ID = 1;

                                    <button onclick="addAmount(this.id);" id="@ID" class="btn btn-default" type="button" data-toggle="tooltip" data-placement="top" title="Credit Amount"><i class="fa fa-plus"></i></button>
                                    <button onclick="subtractAmount(this.id);" id="@ID" class="btn btn-default " type="button" data-toggle="tooltip" data-placement="top" title="Debit Amount"><i class="fa fa-minus"></i></button>
                                }
                            }
                            @*<i class="fa fa-clock-o"></i> Last active in 12.10.2015*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>