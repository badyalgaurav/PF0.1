@{
    ViewBag.Title = "CreditDebitAmount";
  
}
@model PartyFund.Presentation.UI.Common.ViewModels.TransectionDetailViewModel
@*<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>*@
<script src="~/Content/Angular/Scripts/angularMin.js"></script>
<div class="modal-dialog ">
    <div class="modal-content">
        <div class="color-line"></div>
        <div class="modal-header">
            <h4 class="modal-title">Modal title</h4>
            <small class="font-bold">Lorem Ipsum is simply dummy text.</small>
        </div>

        <div class="modal-body">
            <div class="row">
                <div class="col-lg-12" ng-app="">
                    <form method="get" class="form-horizontal">
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Account Name</label>
                            <div class="col-lg-10"><input type="text" class="form-control" value="@Model.UserName" readonly></div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Current Amount</label>
                            <div class="col-lg-10"><input type="number" value="@Model.CurrentAmount" class="form-control" ng-model="@Model.CurrentAmount" readonly></div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">@ViewBag.action</label>
                            <div class="col-lg-10"><input type="number"  ng-model="InsertedAmount" class="form-control" max="100000" min="0"></div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-lg-3 col-lg-offset-6 control-label">Total Amount</label>
                            <div class="col-lg-3"><input type="number" class="form-control" value="{{ @Model.CurrentAmount @ViewBag.sign InsertedAmount }}" readonly></div>
                        </div>
                    </form>
                </div>
                </div>
            </div>
                
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
        </div>
    </div>
</div>